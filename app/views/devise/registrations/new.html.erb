<div style="display: flex; justify-content: center;">
  <div style="text-align: center;">
  <h2 class="text-light">Registrate!</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field text-light">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field text-light">
        <%= f.label :name %> <br>
        <%= f.text_field :name, autocomplete: "new-name" %>
      </div>
      <div class="field text-light">
        <%= f.label :phone %> <br>
        <%= f.text_field :phone, autocomplete: "new-phone" %>
      </div>
      <div class="field text-light">
        <%= f.label :age %> <br>
        <%= f.text_field :age, autocomplete: "new-age" %>
      </div>
        <div class="field text-light">
        <%= f.label :nickname %> <br>
        <%= f.text_field :nickname, autocomplete: "new-nickname" %>
      </div>

        <div class="field text-light">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field text-light">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions text-light">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
