<p style="color: green"><%= notice %></p>

<h1 class="text-light">Postea tu noticia</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post, class:"btn btn-info" %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path, class:"btn btn-warning" %>
